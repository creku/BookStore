@model IOrderedEnumerable<Category>

<li class="dropdown">
    <a asp-controller="Book" asp-action="Gallery"
         class="dropdown-toggle" data-toggle="dropdown">Book<b class="caret"></b></a>
    <ul class="dropdown-menu">
        @foreach (var item in Model)
        {
            <li>
                <a asp-controller="Book" asp-action="Gallery" asp-route-category="@item.Name">@item.Name</a>
            </li>
        }
        <li class="divider"></li>
        <li><a href="~/Book/Gallery">All Books</a></li>
    </ul>
</li>